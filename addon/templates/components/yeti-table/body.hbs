{{#if hasBlock}}

  {{#each data as |rowData index|}}
    {{yield
      (hash row=(component "yeti-table/body/row" onClick=onRowClick columns=columns))
      rowData
      index}}
  {{/each}}

{{else}}

  {{#each data as |rowData|}}
    {{#yeti-table/body/row
      class=rowClass
      onClick=(action onRowClick rowData) columns=columns as |row|}}

      {{#each columns as |column|}}
        {{#row.cell class=column.columnClass}}
          {{#if column.prop}}
            {{get rowData column.prop}}
          {{else}}
            {{rowData}}
          {{/if}}
        {{/row.cell}}
      {{/each}}

    {{/yeti-table/body/row}}
  {{/each}}
{{/if}}