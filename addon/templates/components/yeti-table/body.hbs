<tbody class={{class}}>
  {{#if hasBlock}}

    {{#each data as |rowData|}}
      {{yield
        (hash row=(component "yeti-table/body/row" onClick=onRowClick))
        rowData}}
    {{/each}}

  {{else}}

    {{#each data as |rowData|}}
      {{#yeti-table/body/row
        class=rowClass
        onClick=(action onRowClick rowData) as |row|}}

        {{#each columns as |column|}}
          {{#if column.visible}}
            {{#row.cell class=column.columnClass}}
              {{#if column.prop}}
                {{get rowData column.prop}}
              {{else}}
                {{rowData}}
              {{/if}}
            {{/row.cell}}
          {{/if}}
        {{/each}}

      {{/yeti-table/body/row}}
    {{/each}}
  {{/if}}
</tbody>