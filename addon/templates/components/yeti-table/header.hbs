<tr>
  {{#if hasBlock}}
    {{yield (hash
      column=(component "yeti-table/header/column" onClick=(action "onColumnClick") sortProperty=sortProperty sortDirection=sortDirection parent=parent)
    )}}
  {{else}}
    {{#each columns as |column|}}
      {{#yeti-table/table/header/column onClick=(action "onColumnClick") sortProperty=sortProperty sortDirection=sortDirection parent=parent}}
        {{column}}
      {{/yeti-table/table/header/column}}
    {{/each}}
  {{/if}}
</tr>