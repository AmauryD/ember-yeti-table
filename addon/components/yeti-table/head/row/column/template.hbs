{{#if visible}}
  <th
    role={{if sortable "button"}}
    class="{{class}} {{theme.theadCell}} {{if sortable theme.columnSortable}} {{if isSorted theme.columnSorted}} {{if isAscSorted theme.columnSortedAsc}} {{if isDescSorted theme.columnSortedDesc}}"
    onclick={{if sortable (action onClick this)}}
    ...attributes>
    {{yield (hash
      isSorted=isSorted
      isAscSorted=isAscSorted
      isDescSorted=isDescSorted
    )}}
  </th>
{{/if}}