{{#if showInfo}}
  <div class="yeti-table-pagination-controls-page-info">
    Showing {{paginationData.pageStart}} to {{paginationData.pageEnd}} of {{paginationData.totalRows}} entries
  </div>
{{/if}}

{{#if showPageSizeSelector}}
  <div class="yeti-table-pagination-controls-page-size">
    Rows per page:
    <select disabled={{disabled}} onchange={{action paginationActions.changePageSize value="target.value"}}>
      {{#each pageSizes as |pageSize|}}
        <option value={{pageSize}} selected={{yeti-table-eq paginationData.pageSize pageSize}}>{{pageSize}}</option>
      {{/each}}
    </select>
  </div>
{{/if}}

{{#if showButtons}}
  <button class="yeti-table-pagination-controls-previous" disabled={{shouldDisablePrevious}} onclick={{action paginationActions.previousPage}}>
    Previous
  </button>

  <button class="yeti-table-pagination-controls-next" disabled={{shouldDisableNext}} onclick={{action paginationActions.nextPage}}>
    Next
  </button>
{{/if}}